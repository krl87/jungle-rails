<h1>Login</h1>
  <form >
  <%= form_tag '/login' do %>
    <div class="form-group">
      <%= label :email %>
      <%= text_field_tag :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label :password %>
      <%= password_field_tag :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag "Submit", class: 'btn btn-primary' %>
    </div>
  </form >
<% end %>